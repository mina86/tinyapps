open RGB, "/usr/X11R6/lib/X11/rgb.txt";

my %colors = map {
  s/^\s+//; s/\s+$//; $_ = lc $_;
  split /\s+/, $_, 4;
  ($_[3], sprintf "rgb:%02x/%02x/%02x", @_[0 .. 2]);
} grep { !/^\s*!/ } <RGB>;

close RGB;

sub printcolor($) {
  my $color = lc shift;
  if (exists $colors{$color}) {
    print "$color => $colors{$color}";
  } else {
    print "No such color: $color";
  }
}

if (@ARGV) {
  printcolor shift while @ARGV;
  exit;
}

chomp, printcolor $_ while <STDIN>;
